<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="4dp"
    android:padding="16dp"
    tools:context=".activities.MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/border_blue"
    app:cardCornerRadius="10dp"
    android:id="@+id/item_card_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/border_blue">

        <com.github.ivbaranov.mfb.MaterialFavoriteButton
            android:id="@+id/item_fav"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:tint="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Titular: "
                android:gravity="start|center_vertical"
                android:layout_weight="4.8"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/item_et_titular"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                
                
                android:gravity="start|center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="2"
                />

            <ImageView
                android:id="@+id/ic_edit_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_edit"
                android:layout_weight="5"
                android:tint="@color/colorPrimaryDark"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ic_delete_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_delete"
                android:layout_weight="5"
                android:tint="@color/colorPrimaryDark"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/item_et_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Banco"
            android:gravity="start|center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cta:"
                android:layout_weight="4.8"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/item_et_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:textColor="@color/colorPrimaryDark"/>

            <ImageView
                android:id="@+id/ic_share_cta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_share"
                android:layout_weight="5"
                android:tint="@color/colorPrimaryDark"/>
            <ImageView
                android:id="@+id/ic_copy_cta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_copy"
                android:layout_weight="5"
                android:tint="@color/colorPrimaryDark"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CCI:"
                    android:layout_weight="4.8"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/item_et_account_cci"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="start|center_vertical"/>

                <ImageView
                    android:id="@+id/ic_share_cci"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_share"
                    android:layout_weight="5"
                    android:tint="@color/colorPrimaryDark"/>
                <ImageView
                    android:id="@+id/ic_copy_cci"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_copy"
                    android:layout_weight="5"
                    android:tint="@color/colorPrimaryDark"/>
            </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>