<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    tools:context=".FirstActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#000F">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        android:paddingRight="10dp"
        android:paddingTop="16dp"
        android:paddingLeft="10dp"
        android:background="#FFF0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Titular: "
                    app:met_floatingLabel="highlight"
                    app:met_iconPadding="0dp"
                    android:gravity="left|center_vertical"
                    android:layout_weight="4.8"/>
                <TextView
                    android:id="@+id/item_et_titular"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:hint="Titular"
                    app:met_floatingLabel="highlight"
                    app:met_iconPadding="0dp"
                    android:gravity="left|center_vertical"
                    android:textColor="#000"
                    android:layout_weight="2"/>

                <ImageButton
                    android:id="@+id/ic_edit_card"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_edit"
                    android:layout_weight="5"
                    android:background="#FFF"/>

                <ImageButton
                    android:id="@+id/ic_delete_card"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_delete"
                    android:layout_weight="5"
                    android:background="#FFF"/>
            </LinearLayout>

            <TextView
                android:id="@+id/item_et_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabel="highlight"
                app:met_iconPadding="0dp"
                android:text="Banco"
                android:gravity="left|center_horizontal"
                android:textColor="#000"
                android:textSize="18dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Cta: "
                    app:met_floatingLabel="highlight"
                    app:met_iconPadding="0dp"
                    android:layout_weight="4.8"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/item_et_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:met_floatingLabel="highlight"
                    app:met_iconPadding="0dp"
                    android:layout_weight="2"
                    android:gravity="left|center_vertical"/>

                <ImageButton
                    android:id="@+id/ic_share_cta"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_share"
                    android:layout_weight="5"
                    android:backgroundTint="#FFF"/>
                <ImageButton
                    android:id="@+id/ic_copy_cta"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_copy"
                    android:layout_weight="5"
                    android:background="#FFF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="CCI: "
                    app:met_floatingLabel="highlight"
                    app:met_iconPadding="0dp"
                    android:layout_weight="4.8"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/item_et_account_cci"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:met_floatingLabel="highlight"
                    app:met_iconPadding="0dp"
                    android:layout_weight="2"
                    android:gravity="left|center_vertical"/>

                <ImageButton
                    android:id="@+id/ic_share_cci"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_share"
                    android:layout_weight="5"
                    android:background="#FFF"/>
                <ImageButton
                    android:id="@+id/ic_copy_cci"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_copy"
                    android:layout_weight="5"
                    android:background="#FFF"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>